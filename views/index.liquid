{% render 'partials/head.liquid' %}

   <main class="phone">
  <section class="screen" id="screen">

    <!-- Lock screen -->
    <section class="lock" id="lock" aria-label="Lock screen">

      <header class="status">
        <span class="carrier">Vodafone NL</span>
        <span class="battery" aria-label="Battery level">ðŸ”‹100%</span>
      </header>

      <time class="date" id="date" aria-label="Current date"></time>

      <div class="time"> <div id="hour">00</div> <div id="minute">00</div> </div>

      <p class="hint">Tap to unlock</p>
    </section>

    <!-- Profile screen -->
    <section class="profile" id="profile" aria-label="User profile">
      <img src="{{ person.avatar }}" class="avatar">
      <h1>{{ person.name }}</h1>
      <p>{{ person.bio }}</p>
      <p>{{ person.birthdate }}</p>
      <p>{{ person.favorite_color }}</p>
    </section>

  </section>
</main>   

{% render 'partials/foot.liquid' %}
